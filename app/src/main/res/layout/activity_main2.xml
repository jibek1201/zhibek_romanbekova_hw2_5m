<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/tv_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/heart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_heart"
        app:layout_constraintTop_toTopOf="@id/tv_heart"
        app:layout_constraintEnd_toEndOf="@id/tv_heart"
        android:layout_marginTop="60dp"
        android:text="First"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_second"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        android:layout_marginTop="24dp"
        android:text="Second"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_percentage"
        app:layout_constraintStart_toStartOf="@id/tv_second"
        app:layout_constraintTop_toTopOf="@id/tv_second"
        app:layout_constraintEnd_toEndOf="@id/tv_second"
        android:layout_marginTop="24dp"
        android:text="60%"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_result"
        app:layout_constraintStart_toStartOf="@id/tv_percentage"
        app:layout_constraintTop_toTopOf="@id/tv_percentage"
        app:layout_constraintEnd_toEndOf="@id/tv_percentage"
        android:layout_marginTop="24dp"
        android:text="Good"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>